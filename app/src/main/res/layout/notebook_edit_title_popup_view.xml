<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notebookPopupConstraintLayout"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:background="@color/darkBlue">

    <EditText
        android:id="@+id/notebookEditTitleEditText"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textViewNewTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notebookEditTitleSaveButton"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/orange"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="@+id/notebookEditTitleCancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/notebookEditTitleCancelButton" />

    <Button
        android:id="@+id/notebookEditTitleCancelButton"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notebookEditTitleEditText" />

    <TextView
        android:id="@+id/textViewNewTitle"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="New Title:"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/notebookEditTitleEditText"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>